---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Snake from '../components/Snake.astro';

// Get recent blog posts
const recentPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);

---

<Layout>
  <div class="min-h-[calc(100vh-14rem)]">
    <!-- Two Column Hero -->
    <section class="grid lg:grid-cols-2 gap-0 min-h-[calc(100vh-10rem)]">
      <!-- Left Column - Introduction -->
      <div class="flex flex-col justify-center p-8 lg:p-12 xl:p-16 border-b lg:border-b-0 lg:border-r border-cream-300 dark:border-ink-lighter">
        <div class="max-w-md">
          <p class="text-accent dark:text-accent-light font-medium mb-4 tracking-wide uppercase text-sm">
            Software Engineer
          </p>
          
          <h1 class="font-serif text-4xl lg:text-5xl xl:text-6xl font-semibold leading-tight mb-6">
            Meshan<br/>Khosla
          </h1>
          
          <p class="text-lg text-charcoal-muted dark:text-sand-muted leading-relaxed mb-8">
            Software Engineer at AWS<span class="text-accent dark:text-accent-light">.</span>
            <br />
            UC Berkeley Computer Science graduate<span class="text-accent dark:text-accent-light">.</span>
            <br />
            I write about distributed systems, software engineering, and things I'm learning, usually at a coffee shop<span class="text-accent dark:text-accent-light">.</span>
          </p>

          <!-- Social Links -->
          <div class="flex items-center gap-3">
            <a
              href="https://www.linkedin.com/in/MeshanKhosla"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 rounded-lg
                     bg-accent text-white hover:bg-accent-dark
                     transition-colors font-medium text-sm"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
            <a
              href="https://github.com/MeshanKhosla"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 rounded-lg
                     border border-cream-300 dark:border-ink-lighter
                     hover:bg-cream-200 dark:hover:bg-ink-lighter
                     transition-colors font-medium text-sm"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
            <a
              href="mailto:mkhosla@berkeley.edu"
              class="inline-flex items-center gap-2 px-4 py-2 rounded-lg
                     bg-slate-800 text-white hover:bg-slate-900
                     transition-colors font-medium text-sm"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"/>
                <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"/>
              </svg>
              Email
            </a>
          </div>
        </div>
      </div>

      <!-- Right Column - Recent Posts -->
      <div class="flex flex-col p-8 lg:p-12 xl:p-16 bg-cream-50/50 dark:bg-ink-light/50">
        <div class="flex items-center justify-between mb-6">
          <h2 class="font-serif text-xl font-semibold">Recent Posts</h2>
          <a
            href="/blog"
            data-astro-prefetch="hover"
            class="text-sm text-accent dark:text-accent-light hover:underline underline-offset-2"
          >
            View all â†’
          </a>
        </div>

        <div class="flex-1 space-y-1">
          {recentPosts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              data-astro-prefetch="hover"
              class="group block p-4 -mx-4 rounded-lg hover:bg-cream-200/50 dark:hover:bg-ink-lighter/50 transition-colors"
            >
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1 min-w-0">
                  <h3 class="font-medium text-charcoal dark:text-sand group-hover:text-accent dark:group-hover:text-accent-light transition-colors line-clamp-1">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-charcoal-muted dark:text-sand-muted line-clamp-1 mt-1">
                    {post.data.description}
                  </p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Snake Game Section -->
    <section class="p-8 lg:p-12 xl:p-16 border-t border-cream-300 dark:border-ink-lighter">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-8">
          <h2 class="font-serif text-2xl font-semibold mb-2">Take a break</h2>
          <p class="text-charcoal-muted dark:text-sand-muted">
            Play some Snake while you're here
          </p>
        </div>
        <Snake />
      </div>
    </section>
  </div>
</Layout>
