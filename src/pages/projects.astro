---
import Layout from '../layouts/Layout.astro';
import GridCard from '../components/GridCard.astro';

const projects = [
  {
    title: 'convex-timeline',
    description: 'Convex component for undo/redo state management with named checkpoints.',
    url: 'https://github.com/MeshanKhosla/convex-timeline',
    image: '/convex-timeline.png',
  },
  {
    title: 'Simple Office Hours Queue',
    description: 'SOHQ is an open source office hours queue built with Next.JS, Prisma, TRPC, and MySQL. I built this for CS61B at UC Berkeley.',
    url: 'https://github.com/Berkeley-CS61B/simple-office-hours-queue',
    image: '/dark-sohq.png',
  },
  {
    title: 'NP Complete Approximation',
    description: 'Placed 2/250 in CS 170. Experimented with greedy, DP, LP, parallelization, and simulated annealing using Rust, AWS, GCP, and Python.',
    url: 'https://github.com/noahadhikari/penguin-optimization',
    image: '/graph-problem.bmp',
  },
  {
    title: 'PintOS Kernel',
    description: 'Designed and implemented a kernel for the PintOS operating system with user programs, multithreading, scheduling, and file systems.',
    url: 'https://cs162.org/static/proj/pintos-docs',
    image: '/pintos.jpg',
  },
  {
    title: '@upstash/lock',
    description: 'NPM package for distributed lock implementation using Upstash Redis with atomic operations and lease management.',
    url: 'https://github.com/upstash/lock/tree/main',
    image: '/dist-lock.png',
  },
  {
    title: 'redis-union-find',
    description: 'Implemented the Union-Find data structure using Redis for durable, distributed disjoint sets.',
    url: '/blog/redis-union-find',
    image: '/redis-union-find-blog/cover.png',
  },
  {
    title: '2x2 Rubik\'s Cube Solver',
    description: 'A* algorithm to find the optimal solution for any 2x2 Rubik\'s cube state via Flask webapp.',
    url: 'https://github.com/MeshanKhosla/Optimal-2x2-Cube-Solver',
    image: '/2x2-cube.bmp',
  },
  {
    title: 'Gitlet',
    description: 'Version control system mimicking Git with 10+ commands including init, add, commit, checkout, branch, merge, and more.',
    url: 'https://sp21.datastructur.es/materials/proj/proj2/proj2',
    image: '/git-logo.bmp',
  },
  {
    title: 'Spaced Repetition Quiz',
    description: 'React webapp enabling students to see harder questions more often using a Priority Queue system.',
    url: 'https://spaced-repetition-quiz.netlify.app',
    image: '/spaced-repetition.png',
  },
  {
    title: 'Path Visualizer',
    description: 'Pygame path visualizer for A*, Dijkstra\'s, BFS, and DFS algorithms in real time.',
    url: 'https://github.com/MeshanKhosla/PathVisualizer',
    image: '/dijkstra.bmp',
  },
];
---

<Layout title="Projects" description="A collection of projects I've worked on.">
  <div class="p-6 lg:p-12">
    <!-- Header -->
    <header class="max-w-4xl mb-10">
      <h1 class="font-serif text-3xl lg:text-4xl font-semibold mb-4">Projects</h1>
      <p class="text-charcoal-muted dark:text-sand-muted text-balance">
        A collection of things I've built, from distributed systems to visualization tools.
      </p>
    </header>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project) => (
        <GridCard
          title={project.title}
          description={project.description}
          url={project.url}
          image={project.image}
          isExternal={project.url.startsWith('http')}
        />
      ))}
    </div>
  </div>
</Layout>
