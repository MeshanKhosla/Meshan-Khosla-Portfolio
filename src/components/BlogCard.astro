---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  heroImage?: string;
}

const { title, description, pubDate, slug, heroImage } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group">
  <a href={`/blog/${slug}`} class="block">
    <div class="card card-hover">
      {heroImage && (
        <div class="mb-4 -mx-6 -mt-6 overflow-hidden rounded-t-lg">
          <img
            src={heroImage}
            alt={title}
            class="w-full h-48 object-cover"
            loading="lazy"
          />
        </div>
      )}
      
      <div class="space-y-3">
        <div class="flex items-center gap-3 text-sm text-charcoal-muted dark:text-sand-muted">
          <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        </div>

        <h2 class="font-serif text-xl font-semibold text-charcoal dark:text-sand
                   group-hover:text-accent dark:group-hover:text-accent-light transition-colors">
          {title}
        </h2>

        <p class="text-charcoal-muted dark:text-sand-muted line-clamp-2">
          {description}
        </p>

        <span class="inline-flex items-center gap-1 text-sm text-accent dark:text-accent-light font-medium">
          Read more
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>
