---
interface Props {
  title: string;
  description: string;
  url: string;
  image?: string;
  meta?: string;
  isExternal?: boolean;
  slug?: string;
}

const { title, description, url, image, meta, isExternal = false, slug = '' } = Astro.props;
---

<article 
  class="group relative"
  data-search-card
  data-title={title}
  data-description={description}
  data-slug={slug}
>
  <a
    href={url}
    target={isExternal ? '_blank' : '_self'}
    rel={isExternal ? 'noopener noreferrer' : undefined}
    class="block h-full"
  >
    <div class="card card-hover h-full flex flex-col overflow-hidden">
      {image && (
        <div class="-mx-6 -mt-6 mb-4 overflow-hidden bg-cream-200 dark:bg-ink-lighter">
          <div class="aspect-[16/10] overflow-hidden">
            <img
              src={image}
              alt={title}
              class="w-full h-full object-cover object-top transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
          </div>
        </div>
      )}
      
      <div class="flex-1 flex flex-col">
        <div class="flex items-start justify-between gap-2 mb-2">
          <h3 class="font-serif text-lg font-semibold text-charcoal dark:text-sand
                     group-hover:text-accent dark:group-hover:text-accent-light transition-colors line-clamp-2">
            {title}
          </h3>
          {isExternal && (
            <svg class="w-4 h-4 flex-shrink-0 mt-1 text-charcoal-muted dark:text-sand-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          )}
        </div>

        {meta && (
          <p class="text-xs text-charcoal-muted dark:text-sand-muted mb-2">{meta}</p>
        )}

        <p class="text-sm text-charcoal-muted dark:text-sand-muted line-clamp-3 group-hover:line-clamp-none flex-1 transition-all duration-200">
          {description}
        </p>
      </div>
    </div>
  </a>
</article>
