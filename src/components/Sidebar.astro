---

<!-- Mobile Header -->
<header class="lg:hidden fixed top-0 left-0 right-0 z-50 h-14 px-4 flex items-center justify-between
               bg-cream-100/95 dark:bg-ink/95 backdrop-blur-sm
               border-b border-cream-300 dark:border-ink-lighter">
  <a href="/" class="font-serif text-lg font-semibold">MK</a>
  <div class="flex items-center gap-2">
    <ThemeToggle />
    <button
      id="mobile-sidebar-toggle"
      type="button"
      class="p-2 rounded-md hover:bg-cream-200 dark:hover:bg-ink-lighter"
      aria-label="Toggle menu"
    >
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
</header>

<!-- Sidebar -->
<aside
  id="sidebar"
  class="fixed left-0 top-0 z-40 h-screen
         bg-cream-100 dark:bg-ink
         border-r border-cream-200 dark:border-ink-lighter/50
         shadow-[2px_0_8px_-2px_rgba(0,0,0,0.08)] dark:shadow-[2px_0_12px_-2px_rgba(0,0,0,0.4)]
         -translate-x-full lg:translate-x-0
         w-64 lg:w-56"
>
  <div class="flex flex-col h-full p-4">
    <!-- Logo & Toggle -->
    <div class="flex items-center justify-between mb-8">
      <a href="/" class="font-serif text-xl font-semibold text-charcoal dark:text-sand">
        Meshan<span class="text-accent dark:text-accent-light">.</span>
      </a>
      <button
        id="sidebar-collapse"
        type="button"
        class="hidden lg:flex p-1.5 rounded-md hover:bg-cream-200 dark:hover:bg-ink-lighter"
        aria-label="Collapse sidebar"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
        </svg>
      </button>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 space-y-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium transition-colors',
            isActive(link.href)
              ? 'bg-accent/10 text-accent dark:bg-accent-light/10 dark:text-accent-light'
              : 'text-charcoal-muted dark:text-sand-muted hover:bg-cream-200 dark:hover:bg-ink-lighter hover:text-charcoal dark:hover:text-sand',
          ]}
        >
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d={link.icon} />
          </svg>
          <span class="sidebar-label">{link.label}</span>
        </a>
      ))}
    </nav>

    <!-- Bottom Section -->
    <div class="pt-4 border-t border-cream-300 dark:border-ink-lighter">
      <!-- Social Links + Theme Toggle -->
      <div class="flex items-center gap-1 px-1">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-md text-charcoal-muted dark:text-sand-muted
                   hover:bg-cream-200 dark:hover:bg-ink-lighter
                   hover:text-accent dark:hover:text-accent-light transition-colors"
            aria-label={link.label}
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d={link.icon} />
            </svg>
          </a>
        ))}
        <!-- Theme Toggle inline with social icons -->
        <div class="hidden lg:block">
          <ThemeToggle />
        </div>
      </div>
    </div>
  </div>
</aside>

<!-- Sidebar Overlay (Mobile) -->
<div
  id="sidebar-overlay"
  class="fixed inset-0 z-30 bg-charcoal/50 dark:bg-ink/50 opacity-0 pointer-events-none
         transition-opacity duration-300 lg:hidden"
></div>

<!-- Collapsed Sidebar Trigger (Desktop) -->
<button
  id="sidebar-expand"
  type="button"
  class="hidden fixed left-0 top-4 z-50 p-2 rounded-r-lg
         bg-cream-100 dark:bg-ink
         border border-l-0 border-cream-200 dark:border-ink-lighter/50
         hover:bg-cream-200 dark:hover:bg-ink-lighter
         transition-all duration-300"
  aria-label="Expand sidebar"
>
  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
  </svg>
</button>

<script>
  function initSidebar() {
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('sidebar-overlay');
    const mobileToggle = document.getElementById('mobile-sidebar-toggle');
    const collapseBtn = document.getElementById('sidebar-collapse');
    const expandBtn = document.getElementById('sidebar-expand');

    if (!sidebar || !overlay) return;

    // Check if sidebar is collapsed (from html class set in head)
    const isCollapsed = document.documentElement.classList.contains('sidebar-collapsed');
    
    // Show/hide expand button based on state
    if (expandBtn) {
      if (isCollapsed && window.innerWidth >= 1024) {
        expandBtn.classList.remove('hidden');
      } else {
        expandBtn.classList.add('hidden');
      }
    }

    // Mobile toggle
    mobileToggle?.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
      overlay.classList.toggle('opacity-0');
      overlay.classList.toggle('pointer-events-none');
    });

    // Close on overlay click
    overlay.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      overlay.classList.add('opacity-0', 'pointer-events-none');
    });

    collapseBtn?.addEventListener('click', () => {
      collapseSidebar();
    });

    expandBtn?.addEventListener('click', () => {
      expandSidebar();
    });

    function collapseSidebar() {
      localStorage.setItem('sidebar-collapsed', 'true');
      document.documentElement.classList.add('sidebar-collapsed');
      expandBtn?.classList.remove('hidden');
    }

    function expandSidebar() {
      localStorage.setItem('sidebar-collapsed', 'false');
      document.documentElement.classList.remove('sidebar-collapsed');
      expandBtn?.classList.add('hidden');
    }
  }

  initSidebar();
</script>

<style>
  /* Sidebar transitions - only transform, not width to avoid jank */
  #sidebar {
    transition: transform 200ms ease-out;
  }
  
  /* No transition on initial load or during navigation */
  :global(html.sidebar-no-transition) #sidebar {
    transition: none !important;
  }
  
  /* When sidebar is collapsed on desktop - use transform only */
  :global(html.sidebar-collapsed) .sidebar-label {
    @apply lg:opacity-0;
  }
  
  :global(html.sidebar-collapsed) #sidebar {
    @apply lg:-translate-x-full;
  }
</style>
