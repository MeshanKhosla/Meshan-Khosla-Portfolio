---
// ThemeToggle.astro - Light/Dark mode toggle with smooth transitions
---

<button
  type="button"
  aria-label="Toggle dark mode"
  class="theme-toggle relative w-10 h-10 rounded-md flex items-center justify-center
         hover:bg-cream-200 dark:hover:bg-ink-lighter
         transition-colors duration-200"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    class="sun-icon absolute w-5 h-5 text-sand opacity-0 scale-75 rotate-90
           dark:opacity-100 dark:scale-100 dark:rotate-0
           transition-all duration-300"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>

  <!-- Moon icon (shown in light mode) -->
  <svg
    class="moon-icon absolute w-5 h-5 text-charcoal opacity-100 scale-100 rotate-0
           dark:opacity-0 dark:scale-75 dark:-rotate-90
           transition-all duration-300"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
</button>

<script>
  function setupThemeToggle() {
    const toggles = document.querySelectorAll('.theme-toggle');
    if (!toggles.length) return;

    // Apply theme to document
    const applyTheme = (theme: 'dark' | 'light') => {
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    };

    // Toggle theme on click for all toggle buttons
    toggles.forEach((toggle) => {
      toggle.addEventListener('click', () => {
        const currentTheme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        localStorage.setItem('theme', newTheme);
        applyTheme(newTheme);
      });
    });
  }

  // Run on initial load
  setupThemeToggle();
</script>
